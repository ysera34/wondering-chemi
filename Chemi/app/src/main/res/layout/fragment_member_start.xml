<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBackground1">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="130dp"
            android:gravity="center_horizontal">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/logo_white_kr"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_start_app_info"
            android:textAppearance="@style/MemberStartWhiteTextAppearance"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="47dp"
            android:paddingEnd="47dp"
            android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/member_start_google_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:background="@drawable/selector_opaque_red_google">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_google_white"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/member_start_google_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/member_start_google"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"/>
            <!--android:textAppearance="@style/MemberStartGrayTextAppearance"-->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/member_start_naver_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:background="@drawable/selector_opaque_green_naver">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_naver_white"
                android:scaleType="centerInside"
                android:id="@+id/imageView"/>

            <TextView
                android:id="@+id/member_start_naver_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_start_naver"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:layout_alignBottom="@+id/imageView"
                android:layout_centerHorizontal="true"/>
                <!--android:textAppearance="@style/MemberStartGrayTextAppearance"-->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/member_start_local_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:background="@drawable/selector_opaque_white_local">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_email_green"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/member_start_local_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/member_start_local"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"/>
            <!--android:textAppearance="@style/MemberStartGrayTextAppearance"-->

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="26dp">

            <TextView
                android:id="@+id/member_start_browse_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:clickable="true"
                android:text="@string/member_start_browse"
                android:textSize="14sp"
                android:textColor="@color/color_selector_white_armadillo"
                android:textAppearance="@style/MemberStartWhiteTextAppearance"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>