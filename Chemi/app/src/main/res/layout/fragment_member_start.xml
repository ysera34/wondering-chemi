<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="130dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/logo_white"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_start_app_info"
                android:textAppearance="@style/MemberStartTextAppearance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="47dp"
            android:paddingEnd="47dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/member_start_naver_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:background="@drawable/selector_bg_member_start_button_layout">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:src="@drawable/ic_naver"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/member_start_naver_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/member_start_naver"
                    android:textSize="16sp"
                    android:textAppearance="@style/MemberStartTextAppearance"/>
            </RelativeLayout>

            <Button
                android:id="@+id/naver_sign_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/member_start_google_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:background="@drawable/selector_bg_member_start_button_layout">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:src="@drawable/ic_google"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/member_start_google_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/member_start_google"
                    android:textSize="16sp"
                    android:textAppearance="@style/MemberStartTextAppearance"/>
            </RelativeLayout>

            <Button
                android:id="@+id/google_sign_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/google_revoke_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/member_start_local_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:background="@drawable/selector_bg_member_start_button_layout">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:src="@drawable/ic_email_24dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/member_start_local_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/member_start_local"
                    android:textSize="16sp"
                    android:textColor="@color/color_selector_white_armadillo"
                    android:textAppearance="@style/MemberStartTextAppearance"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:paddingStart="27dp"
                android:paddingEnd="27dp">

                <TextView
                    android:id="@+id/member_start_browse_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:text="@string/member_start_browse"
                    android:textAppearance="@style/MemberStartTextAppearance"/>

                <TextView
                    android:id="@+id/member_start_already_user_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:text="@string/member_start_already_user"
                    android:textAppearance="@style/MemberStartTextAppearance"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>