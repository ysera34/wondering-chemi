<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="63dp"
              android:paddingStart="18dp"
              android:paddingEnd="18dp"
              android:gravity="center_vertical"
              android:background="@drawable/selector_ripple_list_item_border_gray">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/list_item_notification_parent_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/colorFontNormal"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/list_item_notification_parent_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorDoveGray"/>
        
    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_notification_parent_arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_down_gray"/>

</LinearLayout>