<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_search_product_height"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    card_view:contentPadding="4dp"
    android:elevation="2dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!--android:paddingTop="8dp"-->
        <!--android:paddingBottom="8dp"-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/list_item_product_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/list_item_product_brand_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="14sp"
                android:textColor="@color/colorFontNormal"
                android:text="더퓨어"/>

            <TextView
                android:id="@+id/list_item_product_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorFontNormal"
                android:text="아임키즈 찰랑찰랑 2NI1 샴푸"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <RatingBar
                android:id="@+id/list_item_product_review_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RatingBarTheme"
                style="@style/ProductListRatingBarStyle"
                android:rating="3.5"
                android:stepSize="0.01"
                android:numStars="5"/>

            <TextView
                android:id="@+id/list_item_product_review_rating_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:text="4.0"/>

            <TextView
                android:id="@+id/list_item_product_review_rating_count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorFontNormal"
                android:text="(1300명)"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>