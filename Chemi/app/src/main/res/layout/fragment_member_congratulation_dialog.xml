<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_congratulations"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:text="축하합니다!"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="케미 회원가입이 완료되었습니다.\n케미와 함께 더욱 안전한 가정을 꾸려보세요."
        android:lineSpacingMultiplier="1.2"
        android:textSize="14sp"
        android:textColor="@color/colorDoveGray"/>
        <!--android:layout_marginBottom="40dp"-->

    <TextView
        android:id="@+id/member_congratulation_confirm_button_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:clickable="true"
        android:text="확 인"
        android:textSize="16sp"
        android:textColor="@color/color_selector_button_white_primary"
        android:background="@drawable/selector_opaque_primary"/>

</LinearLayout>