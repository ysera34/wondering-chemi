<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:fitsSystemWindows="true"-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/member_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/member_header_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            app:titleEnabled="false"
            app:contentScrim="@color/colorWhite"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleMarginEnd="30dp"
            android:fitsSystemWindows="true">

            <!--app:layout_scrollFlags="scroll|enterAlwaysCollapsed"-->
            <!--android:fitsSystemWindows="true"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:background="@drawable/widget_border_bottom_member_appbar">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/member_profile_circle_image_view"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_user"/>
                <!--app:civ_border_width="1dp"-->
                <!--app:civ_border_color="#FF000000"-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/member_profile_circle_image_view"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/member_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yoco"
                        android:textSize="18sp"
                        android:textColor="@color/colorFontToolbarSubtitle"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/parent_age_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:layout_marginEnd="6dp"
                                android:textSize="11sp"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/widget_solid_oval_rectangle_twilight_blue"/>

                            <TextView
                                android:id="@+id/parent_dry_skin_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:layout_marginEnd="6dp"
                                android:text="건성"
                                android:textSize="11sp"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/widget_solid_oval_rectangle_twilight_blue"/>

                            <TextView
                                android:id="@+id/parent_oily_skin_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:layout_marginEnd="6dp"
                                android:text="지성"
                                android:textSize="11sp"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/widget_solid_oval_rectangle_twilight_blue"/>

                            <TextView
                                android:id="@+id/parent_dry_oily_skin_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:layout_marginEnd="6dp"
                                android:text="건성/지성"
                                android:textSize="11sp"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/widget_solid_oval_rectangle_twilight_blue"/>

                            <TextView
                                android:id="@+id/parent_allergy_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text="알레르기"
                                android:textSize="11sp"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/widget_solid_oval_rectangle_twilight_blue"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/child_layout"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/child_dry_skin_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:layout_marginEnd="6dp"
                                android:text="자녀 악건성"
                                android:textSize="11sp"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/widget_solid_oval_rectangle_twilight_blue"/>

                            <TextView
                                android:id="@+id/child_allergy_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text="자녀 알레르기"
                                android:textSize="11sp"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/widget_solid_oval_rectangle_twilight_blue"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp">

                    <!--<ImageView-->
                        <!--android:id="@+id/member_config_image_view"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:src="@drawable/ic_search_primary_24dp"-->
                        <!--android:scaleType="centerInside"/>-->

                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/member_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                app:title="마이페이지"
                app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
                app:titleTextColor="@color/colorFontToolbarTitle"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin">
                <!--app:layout_scrollFlags="scroll|enterAlwaysCollapsed"-->

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/archive_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="18dp"
                        android:text="yoco 님이 관심있는 제품"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontToolbarSubtitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:text="더 보기 >"
                        android:textColor="@color/colorStarDust"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/archive_product_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/widget_border_bottom">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="18dp"
                        android:text="yoco 님이 관심있는 컨텐츠"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontToolbarSubtitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:text="더 보기 >"
                        android:textColor="@color/colorStarDust"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/archive_content_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/widget_border_bottom">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="18dp"
                        android:text="yoco 님이 리뷰를 작성한 제품"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontToolbarSubtitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:text="더 보기 >"
                        android:textColor="@color/colorStarDust"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/archive_review_product_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>