<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_tag_height"
    android:background="@drawable/selector_ripple_list_item_border_gray">

    <LinearLayout
        android:id="@+id/list_item_tag_latest_all_delete_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_clear_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latest_search_all_delete"
            android:textSize="13sp"
            android:textColor="@color/colorFontAluminum"/>

    </LinearLayout>
    
</RelativeLayout>