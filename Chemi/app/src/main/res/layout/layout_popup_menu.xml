<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_border_rectangle_solid_white">

    <TextView
        android:id="@+id/popup_menu_action_update"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="수정하기"
        android:textSize="15sp"
        android:textColor="@color/colorFontAluminum"
        android:background="@drawable/widget_border_left_bottom"/>

    <TextView
        android:id="@+id/popup_menu_action_delete"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="삭제하기"
        android:textSize="15sp"
        android:textColor="@color/colorFontAluminum"
        android:background="@drawable/widget_border_left_bottom"/>

</LinearLayout>