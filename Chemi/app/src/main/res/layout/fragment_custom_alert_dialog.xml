    <RelativeLayout
        android:id="@+id/alert_dialog_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="115dp"
        android:gravity="center"
        android:background="@drawable/widget_border_bottom_custom_alert_dialog">

        <TextView
            android:id="@+id/custom_alert_dialog_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#4a4a4a"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            tools:text="alert dialog title"/>

        <TextView
            android:layout_below="@+id/custom_alert_dialog_title_text_view"
            android:id="@+id/custom_alert_dialog_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:textColor="#4a4a4a"
            android:textSize="14sp"
            tools:text="description"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/custom_alert_dialog_negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="14sp"
            android:textColor="@color/color_selector_aluminum_primary"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/custom_alert_dialog_positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="14sp"
