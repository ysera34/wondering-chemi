<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_review_user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="7dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_item_review_user_profile_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user_mommy_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/list_item_review_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:theme="@style/RatingBarTheme"
                style="@style/ProductListRatingBarStyle"
                android:stepSize="0.5"
                android:numStars="5"/>

            <TextView
                android:id="@+id/list_item_review_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일주일이내"
                android:textSize="12sp"
                android:textColor="@color/colorFontFrenchGray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/list_item_review_parent_icon_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_mommy_gray"/>

            <TextView
                android:id="@+id/list_item_review_parent_age_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginEnd="6dp"
                android:textSize="11sp"
                android:textColor="@color/colorFontToolbarSubtitle"
                android:background="@drawable/widget_solid_oval_rectangle_black_haze"/>

            <TextView
                android:id="@+id/list_item_review_parent_dry_skin_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginEnd="6dp"
                android:text="건성"
                android:textSize="11sp"
                android:textColor="@color/colorFontToolbarSubtitle"
                android:background="@drawable/widget_solid_oval_rectangle_black_haze"/>

            <TextView
                android:id="@+id/list_item_review_parent_oily_skin_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginEnd="6dp"
                android:text="지성"
                android:textSize="11sp"
                android:textColor="@color/colorFontToolbarSubtitle"
                android:background="@drawable/widget_solid_oval_rectangle_black_haze"/>

            <TextView
                android:id="@+id/list_item_review_parent_dry_oily_skin_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginEnd="6dp"
                android:text="건성/지성"
                android:textSize="11sp"
                android:textColor="@color/colorFontToolbarSubtitle"
                android:background="@drawable/widget_solid_oval_rectangle_black_haze"/>

            <TextView
                android:id="@+id/list_item_review_parent_allergy_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="알레르기"
                android:textSize="11sp"
                android:textColor="@color/colorFontToolbarSubtitle"
                android:background="@drawable/widget_solid_oval_rectangle_black_haze"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_item_review_child_layout"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/list_item_review_child_icon_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_baby_gray"/>

            <TextView
                android:id="@+id/list_item_review_child_dry_skin_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginEnd="6dp"
                android:text="자녀 악건성"
                android:textSize="11sp"
                android:textColor="@color/colorFontToolbarSubtitle"
                android:background="@drawable/widget_solid_oval_rectangle_black_haze"/>

            <TextView
                android:id="@+id/list_item_review_child_allergy_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="자녀 알레르기"
                android:textSize="11sp"
                android:textColor="@color/colorFontToolbarSubtitle"
                android:background="@drawable/widget_solid_oval_rectangle_black_haze"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="8dp"
            android:orientation="vertical"
            android:background="@drawable/widget_border_top">

            <TextView
                android:id="@+id/list_item_review_content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="벌써 세 번째 구입해서 사용중이에요!벌써 세 번째 구입해서 사용중이에요!벌써 세 번째 구입해서 사용중이에요!벌써 세 번째 구입해서 사용중이에요!벌써 세 번째 구입해서 사용중이에요!벌써 세 번째 구입해서 사용중이에요!벌써 세 번째 구입해서 사용중이에요!"
                android:textSize="12sp"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/colorFontNormal"/>

            <LinearLayout
                android:id="@+id/list_item_review_images_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/list_item_review_image1_image_view"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/list_item_review_image2_image_view"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:id="@+id/list_item_review_image3_image_view"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>