<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite">
    <!--android:orientation="vertical"-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/review_create_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="리뷰 작성"
        android:elevation="4dp"
        android:background="@color/colorWhite">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/review_create_review_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:padding="16dp"
            android:orientation="vertical">
            <!--android:focusable="true"-->
            <!--android:focusableInTouchMode="true"-->

            <LinearLayout
                android:id="@+id/review_create_rating_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_border_bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="상품명"
                    android:textSize="15sp"
                    android:textColor="@color/colorFontNormal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="평점"
                    android:textSize="12sp"
                    android:textColor="@color/colorFontBody"/>

                <TextView
                    android:id="@+id/review_create_message_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16sp"
                    android:layout_gravity="center_horizontal"
                    android:text="별점을 매겨주세요!"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>

                <RatingBar
                    android:id="@+id/review_create_rating_value_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:stepSize="1.0"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/review_create_review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/review_create_review_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="리뷰"
                        android:textSize="12sp"
                        android:textColor="@color/colorFontBody"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="15자"
                        android:textSize="14sp"
                        android:textColor="@color/colorFontFrenchGray"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/review_create_review_header_layout">
                    <!--android:layout_marginBottom="16dp"-->
                    <TextView
                        android:id="@+id/review_create_review_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="175dp"
                        android:paddingBottom="40dp"
                        android:gravity="top"
                        android:text="@string/review_create_review_hint"
                        android:textColor="@color/colorFontBody"
                        android:textSize="15sp"
                        android:background="@color/colorWhite"
                        />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/review_create_review_image1_image_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_camera_add_photo"
                    android:background="@drawable/widget_rectangle_border"/>

                <ImageButton
                    android:visibility="invisible"
                    android:id="@+id/review_create_review_image2_image_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_camera_add_photo"
                    android:background="@drawable/widget_rectangle_border"/>

                <ImageButton
                    android:visibility="invisible"
                    android:id="@+id/review_create_review_image3_image_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_camera_add_photo"
                    android:background="@drawable/widget_rectangle_border"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <!--<android.support.v4.widget.NestedScrollView-->

    <!--android:id="@+id/review_create_review_edit_scroll_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:minHeight="100dp"-->
    <!--android:layout_alignParentBottom="true">-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/review_create_review_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <!--android:background="@drawable/widget_border_oval_rectangle_primary">-->
        <!--android:background="@color/colorWhite"-->
        <EditText
            android:id="@+id/review_create_review_edit_text"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:inputType="textMultiLine"
            android:textColorHint="@color/colorFontFrenchGray"
            android:textSize="15sp"
            android:textColor="@color/colorFontNormal"
            android:background="@color/colorWhite"/>
        <!--android:visibility="gone"-->
        <!--android:enabled="false"-->
        <Button
            android:id="@+id/review_create_review_edit_complete_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="완료"
            android:textColor="@color/color_selector_primary_white"
            android:background="@drawable/selector_transparent_primary_opaque_primary"/>

    </RelativeLayout>

    <!--</android.support.v4.widget.NestedScrollView>-->
</RelativeLayout>
