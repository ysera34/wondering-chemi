<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/member_change_password_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorWhite"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:text="비밀번호 설정"
            android:textSize="16sp"
            android:textColor="@color/colorFontNormal"/>

        <RelativeLayout
            android:id="@+id/member_change_password_cancel_layout"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear_gray"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="18dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="새로운 비밀 번호를 설정해주세요!"
                android:textSize="19sp"
                android:textColor="@color/colorDoveGray"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="@dimen/user_info_edit_text_title_text_size"
            android:textColor="@color/colorDoveGray"/>

        <EditText
            android:id="@+id/member_change_password_pw_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:hint="새 비밀번호를 입력하세요 (6자 이상)"
            android:inputType="textPassword"
            android:textSize="@dimen/user_info_edit_text_hint_text_size"
            android:textColor="@color/colorArmadillo"
            android:textColorHint="@color/colorFontIron"
            android:background="@drawable/selector_edit_text_under_line_primary"/>

        <TextView
            android:id="@+id/member_change_password_pw_validation_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/user_info_edit_text_validation_text_size"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/member_change_password_submit_button_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:text="비밀 번호 변경하기"
        android:textSize="@dimen/user_info_submit_button_text_size"
        android:textColor="@color/colorWhite"
        android:background="@drawable/widget_solid_oval_rectangle_iron"/>

</LinearLayout>