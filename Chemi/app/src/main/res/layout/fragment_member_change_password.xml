<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_primary"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="새로운 비밀번호를 설정해주세요!"
            android:textSize="19sp"
            android:textColor="@color/colorFontBody"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingEnd="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="14sp"
            android:textColor="@color/colorFontBody"/>

        <EditText
            android:id="@+id/member_start_local_pw_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:hint="새 비밀번호를 입력하세요 (6자 이상)"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textColor="@color/colorFontToolbarSubtitle"
            android:textColorHint="@color/colorFontIron"
            android:background="@drawable/selector_edit_text_under_line_accent"/>

        <TextView
            android:id="@+id/member_start_local_pw_validation_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="비밀번호는 영문 숫자 조합으노 6자~12자가 되어야 합니다."
            android:textSize="12sp"
            android:textColor="@color/colorFontHint"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:gravity="center_horizontal"
        android:text="비밀 번호 변경하기"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/widget_solid_oval_rectangle_primary"/>

</LinearLayout>