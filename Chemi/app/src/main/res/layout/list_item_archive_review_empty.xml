<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="아직 리뷰를 작성한 제품이 없습니다."
        android:textSize="14sp"
        android:textColor="@color/colorFontAluminum"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:text="첫 리뷰를 작성해주시면 모든 리뷰를 열람하실 수 있어요!"
        android:textSize="12sp"
        android:textColor="@color/colorFontFrenchGray"/>

    <TextView
        android:id="@+id/archive_review_empty_promote_button_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:text="제품 찾아보기"
        android:textSize="14sp"
        android:textColor="@color/color_selector_button_white_primary"
        android:background="@drawable/selector_opaque_primary"/>

</LinearLayout>