<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_view"
        android:transitionName="@string/search_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_editText_height"
        android:background="@color/colorWhite"
        android:elevation="4dp">
        <!--android:layout_margin="
        8dp"-->

        <AutoCompleteTextView
            android:id="@+id/search_auto_text_view"
            android:transitionName="@string/search_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/search_clear_image_layout"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="@string/search_guide_sentence"
            android:textSize="15sp"
            android:textColorHint="@color/colorFontHint"
            android:maxLines="1"
            android:cursorVisible="false"
            android:inputType="textAutoComplete"
            android:imeOptions="actionDone"
            android:dropDownAnchor="@+id/search_view_bottom_anchor"
            android:dropDownWidth="wrap_content"
            android:dropDownSelector="@color/colorPrimary"
            android:layout_toEndOf="@+id/search_image_button"
            android:background="@android:color/transparent" />
        <!--android:popupBackground="@null"-->

        <RelativeLayout
            android:id="@+id/search_clear_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/search_image_button"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:visibility="invisible"
                android:id="@+id/search_clear_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_clear_gray"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/search_image_button"
            android:transitionName="@string/search_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_search_primary"
            android:background="@android:color/transparent"/>

        <!--<RelativeLayout-->
            <!--android:id="@+id/search_view_bottom_anchor"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true">-->

        <!--</RelativeLayout>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_view_bottom_anchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_body_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/search_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginBottom="0.7dp"
            android:background="@color/colorWhite"
            app:tabTextAppearance="@style/SearchTabLayoutTextStyle"
            app:tabTextColor="@color/colorFontHint"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:tabGravity="fill"
            app:tabMode="fixed">

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/search_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>