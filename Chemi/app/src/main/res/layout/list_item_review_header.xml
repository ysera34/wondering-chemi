<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/list_item_review_header_review_create_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingStart="56dp"
        android:paddingEnd="56dp"
        android:background="@drawable/selector_opaque_primary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/selector_create_review_pencil_image_state"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰를 남겨주세요"
            android:textSize="16sp"
            android:textColor="@color/color_selector_button_white_primary"/>

    </LinearLayout>

</LinearLayout>