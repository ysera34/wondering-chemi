<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/member_header_height"
        android:orientation="vertical"
        android:background="@drawable/widget_border_bottom_member_appbar">

        <ImageView
            android:id="@+id/member_config_setting_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="로그인을 하고 다양한 제품과 컨텐츠를 만나보세요"
            android:lineSpacingMultiplier="1.3"
            android:textSize="15sp"
            android:textColor="@color/colorFontAluminum"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_login"/>

        <TextView
            android:id="@+id/member_config_sign_in_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:text="로그인 하기"
            android:textSize="14sp"
            android:textColor="@color/color_selector_button_white_primary"
            android:background="@drawable/selector_opaque_primary"/>

    </LinearLayout>

</LinearLayout>